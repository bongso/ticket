{
  "name": "nextjs-typescript-boilerplate",
  "version": "0.0.1",
  "main": "index.js",
  "repository": "https://github.com/deptno/nextjs-typescript-boilerplate",
  "author": "bglee <deptno@gmail.com>",
  "license": "MIT",
  "scripts": {
    "tsc": "tsc",
    "dev": "next",
    "build:dev": "next build",
    "build": "npm run tsc && NODE_ENV=production next build",
    "analyze": "npm run tsc && NODE_ENV=production ANALYZE=true next build",
    "start": "next start",
    "test": "jest"
  },
  "dependencies": {
    "@types/react": "^16.0.5",
    "@types/react-ga": "^2.1.1",
    "@types/react-redux": "^5.0.10",
    "@types/redux-persist": "^4.3.1",
    "classnames": "^2.2.5",
    "next": "^4.0.0-beta.4",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-ga": "^2.2.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.1",
    "redux-fetch": "https://github.com/deptno/redux-fetch.git#refac/v2",
    "redux-persist": "^4.9.1",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.26",
    "babel-plugin-transform-define": "^1.3.0",
    "cssnano": "^3.10.0",
    "jest": "^20.0.4",
    "nextjs-export-path-map": "^0.1.2",
    "postcss-cssnext": "^3.0.2",
    "postcss-loader": "^2.0.6",
    "postcss-nested": "^2.0.2",
    "redux-logger": "^3.0.6",
    "skeleton-loader": "^1.1.3",
    "trash": "^4.0.1",
    "tslint": "^5.4.3",
    "typescript": "^2.5.2",
    "webpack-bundle-analyzer": "^2.9.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/*.(test|spec).(ts|tsx)"
    ]
  }
}
